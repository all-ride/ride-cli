<?xml version="1.0" encoding="UTF-8"?>
<container>
    <dependency interface="pallo\library\cli\command\Command" class="pallo\cli\command\DependencySearchCommand" id="dependency" />
    
    <dependency interface="pallo\library\cli\command\Command" class="pallo\cli\command\FileSearchCommand" id="file" />
    
    <dependency interface="pallo\library\cli\command\Command" class="pallo\cli\command\ParameterSearchCommand" id="parameter">
        <call method="setConfig" />
        <call method="setConfigHelper" />
    </dependency>

    <dependency interface="pallo\library\cli\command\Command" class="pallo\cli\command\ParameterGetCommand" id="parameter.get">
        <call method="setConfig" />
        <call method="setConfigHelper" />
    </dependency>

    <dependency interface="pallo\library\cli\command\Command" class="pallo\cli\command\ParameterSetCommand" id="parameter.set">
        <call method="setConfig" />
        <call method="setConfigHelper" />
    </dependency>

    <dependency interface="pallo\library\cli\command\Command" class="pallo\cli\command\ParameterUnsetCommand" id="parameter.unset">
        <call method="setConfig" />
        <call method="setConfigHelper" />
    </dependency>
    
    <dependency class="pallo\library\cli\input\ArgumentParser" id="cli" />
    
    <dependency interface="pallo\library\cli\input\Input" class="pallo\library\cli\input\ArgumentInput" id="argument" />
    
    <dependency interface="pallo\library\cli\input\Input" class="pallo\library\cli\input\PhpInput" id="php" />
    
    <dependency interface="pallo\library\cli\input\Input" class="pallo\library\cli\input\ReadlineInput" id="readline" />
    
    <dependency interface="pallo\library\cli\output\Output" class="pallo\library\cli\output\PhpOutput" id="php" />
    
    <dependency class="pallo\library\cli\Cli" id="cli">
        <call method="setEnablePhpCommand">
            <argument name="enablePhpCommand" type="scalar">
                <property name="value" value="1" />
            </argument>
        </call>
    </dependency>
    
    <dependency interface="pallo\library\log\listener\LogListener" class="pallo\library\log\listener\EchoLogListener" id="echo">
        <call method="setLevel">
            <argument name="level" type="parameter">
                <property name="key" value="log.level" />
            </argument>
        </call>
        <call method="setLogMessageDecorator">
            <argument name="logMessageDecorator" type="dependency">
                <property name="interface" value="pallo\library\decorator\Decorator" />
                <property name="id" value="log.message" />
            </argument>
        </call>
    </dependency>    
    
    <dependency interface="pallo\app\App" class="pallo\cli\CliApp" id="cli" />
</container>